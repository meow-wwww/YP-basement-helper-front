/**app.wxss**/
@import 'weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.textcard{
  background-color: rgb(253, 253, 253);
  margin: 40rpx 40rpx 0rpx 40rpx;
  padding: 0% 1%;
  word-break:break-all;
  border-color: rgb(253, 253, 253);
  box-shadow:2rpx 2rpx 2rpx 2rpx rgb(201, 201, 201);
  border-width: 1px;
  border-radius: 5px;
}

page{
  background-color:#f3f3f3;
  height: 100%;
}


.page__hd {
    padding: 40px;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}